{
  "name": "restaurant-management-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "dev:clean": "powershell -ExecutionPolicy Bypass -File ./iniciar-servidor.ps1",
    "dev:stop": "powershell -ExecutionPolicy Bypass -File ./detener-servidor.ps1",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "npx prisma generate",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "5.22.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vercel/blob": "^2.0.1",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^2.4.3",
    "lucide-react": "^0.263.1",
    "next": "^14.2.35",
    "nodemailer": "^7.0.12",
    "postcss": "^8.4.0",
    "prisma": "5.22.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
